//-  Stock List 
.container
  .stock-list
    h2 Registered Stock
    table#stockTable
      thead
        tr
          th Product Name
          th Product Type
          th Supplier Name
          th Date
          th Quantity
          th Cost Price
          th Selling Price
          th Quality
          th Color
          th Measurements
          th Actions
      tbody
        if items.length
          each item in items
            tr
              td #{item.productName}
              td #{item.productType}
              td #{item.supplierName}
              td #{moment(item.Date).format("DD-MM-YYYY")}
              td #{item.quantity}
              td #{item.costPrice}
              td #{item.sellingPrice}
              td #{item.quality}
              td #{item.color}
              td #{item.measurements}
              td
                a.btn.btn-warning(href=`/editstock/${item._id}`) Edit
