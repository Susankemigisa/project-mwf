extends layout

block styles
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet")
  link(rel="stylesheet", href="/css/registeredusers.css")

block content
  .container.mt-5
    .card.shadow-lg.p-4
      h2.text-center.mb-4 Registered Users
      table.table.table-bordered.table-striped
        thead
          tr
            th Full Name
            th Email
            th Phone
            th Role
        tbody#usersTableBody
          if users.length
            each user in users
              tr
                td #{user.fullName}
                td #{user.email}
                td #{user.phone}
                td #{user.role}
          else
            tr
              td(colspan="4").text-center.text-muted No registered users found.

block scripts
  script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
