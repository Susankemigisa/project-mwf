meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title User Registration Form
//  Bootstrap CSS 
link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet")
//  Custom CSS 
link(rel="stylesheet", href="/css/userRegistration.css")
.img.d-flex.align-items-center.mb-3
  img(src="/images/lg.jpg", alt="MWF Logo", width="120", height="120", class="logo-oval me-2")
  h2.mb-0 MAYONDO WOOD AND FURNITURE LIMITED
.container.mt-5
  .card.shadow-lg.p-4.mx-auto(style="max-width: 400px;")
    h2.text-center.mb-4 User Registration
    //-  ✅ Form starts 
    form#registerForm(action="/users", method="post")
      //-  Full Name 
      .mb-3
        label.form-label(for="fullName") Full Name
        input.form-control#fullName(type="text", name="fullName", placeholder="Enter your full name", required)
      //-  Email 
      .mb-3
        label.form-label(for="email") Email Address
        input.form-control#email(type="email", name="email", placeholder="Enter your email", required)
      //-  Phone 
      .mb-3
        label.form-label(for="phone") Phone Number
        input.form-control#phone(type="tel", name="phone", placeholder="Enter phone number", required)
      //-  Password 
      .mb-3
        label.form-label(for="password") Password
        input.form-control#password(type="password", name="password", placeholder="Enter password", required)
      //-  Confirm Password 
      .mb-3
        label.form-label(for="confirmPassword") Confirm Password
        input.form-control#confirmPassword(type="password", name="confirmPassword", placeholder="Re-enter password", required)
      //-  Role 
      .mb-3
        label.form-label(for="role") User Role
        select.form-select#role(name="role", required)
          option(value) Select role
          option(value="Manager") Manager
          option(value="Attendant") Attendant
      //-  Submit 
      .d-grid.mb-2
        button.btn.btn-success(type="submit") Register User
    //-  ✅ Form ends 
    //-  Redirect to login 
    .d-grid.text-center
    p Already have an account?
      a.login(href="/login") Login
        
    p#message.text-success.mt-3
//-  Bootstrap JS 
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
