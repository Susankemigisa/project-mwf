//-  Sales Registration Form 
.container
  .form-card
    h2 Register New Sale
    form#salesForm(action="/recordSale", method="post")
      label Customer Name
      input#customerName(type="text", name="customerName", required)
      label Product Name
      input#productName(type="text", name="productName", required)
      label Quantity
      input#quantity(type="number", name="quantity", min="1", required)
      label Price (per unit)
      input#price(type="number", name="unitPrice", step="0.01", required)
      label Date
      input#date(type="date", name="date", required)
      label Payment Type
      select#paymentType(name="paymentType", required)
        option(value) Select payment type
        option(value="Cash") Cash
        option(value="Cheque") Cheque
        option(value="Bank transfer") Bank Transfer
      label Sales Agent
      input#salesAgent(type="text", name="salesAgent", required)
      label
        input#transport(type="checkbox", name="transportIncluded")
        |  Include Transport (5%)

      button(type="submit") Save Sale
