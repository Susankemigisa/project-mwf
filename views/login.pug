doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width,initial-scale=1")
    title User Login
    //- Bootstrap CSS 
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet")
    link(rel="stylesheet", href="/css/login.css")

  body
  .img.d-flex.align-items-center.mb-3
  img(src="/images/lg.jpg", alt="MWF Logo", width="120", height="120", class="logo-oval me-2")
  h2.mb-0 MAYONDO WOOD AND FURNITURE LIMITED
    .container.mt-5
      .card.shadow-lg.p-4.mx-auto(style="max-width: 400px;")
        h2.text-center.mb-4 User Login
        form#loginForm(action="/login", method="post")
          //- Username (email will act as username)
          .mb-3
            label.form-label(for="username") Email Address
            input.form-control#username(type="email", name="email", placeholder="Enter your email", required, autocomplete="username")

          //- Password
          .mb-3
            label.form-label(for="password") Password
            input.form-control#password(type="password", name="password", placeholder="Enter password", required, autocomplete="current-password")

          //- Submit 
          .d-grid
            button.btn.btn-primary(type="submit") Login

        p#message.text-danger.mt-3

        h5.text-center
          | Don't have an account? 
          a(href="/users") Register here

    //- Bootstrap JS 
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
