meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title User Login
//-  Bootstrap CSS 
link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet")
link(rel="stylesheet", href="/css/login.css")
.container.mt-5
  .card.shadow-lg.p-4.mx-auto(style="max-width: 400px;")
    h2.text-center.mb-4 User Login
    form#loginForm(action="/login", method="post")
      //-  fullname 
      .mb-3
        label.form-label(for="name") Fullname
        input.form-control#name(type="name", name="fullname", placeholder="Enter your full name", required)
      //-  Email 
      .mb-3
        label.form-label(for="email") Email Address
        input.form-control#email(type="email", name="email", placeholder="Enter your email", required)
      //-  Password 
      .mb-3
        label.form-label(for="password") Password
        input.form-control#password(type="password", name="password", placeholder="Enter password", required)
      //-  Submit 
      .d-grid
        button.btn.btn-primary(type="submit") Login
    p#message.text-danger.mt-3
    p.mt-2.text-center
    p
      | Don't have an account? 
      a(href="/users") Register here
//-  Bootstrap JS 
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
script(src="/js/login.js")