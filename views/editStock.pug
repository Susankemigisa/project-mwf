extends layout

block styles
  link(rel="stylesheet", href="/css/registerStock.css")

block content
  .container
    .form-card
      h2 Edit Stock Form
      form#stockForm(action=`/editstock/${item._id}?_method=PUT`, method="post")

        //- Product Name
        .mb-3
          label(for="productName") Product Name
          select#productName.form-select(name="productName", required)
            option(value=item.productName selected) #{item.productName}
            option(value="Timber") Timber
            option(value="Hardwood") Hardwood
            option(value="Softwood") Softwood
            option(value="Poles") Poles
            option(value="Chairs") Chairs
            option(value="Tables") Tables

        //- Product Type
        .mb-3
          label(for="productType") Product Type
          select#productType.form-select(name="productType", required)
            option(value=item.productType selected) #{item.productType}
            option(value="Wood") Wood
            option(value="Furniture") Furniture

        //- Supplier Name
        .mb-3
          label(for="supplierName") Supplier Name
          input#supplierName.form-control(type="text", name="supplierName", value=item.supplierName, required)

        //- Date
        .mb-3
          label(for="date") Date
          input#date.form-control(type="date", name="date", value=item.date, required)

        //- Quantity
        .mb-3
          label(for="quantity") Quantity
          input#quantity.form-control(type="number", name="quantity", min="1", value=item.quantity, required)

        //- Cost Price
        .mb-3
          label(for="costPrice") Cost Price
          input#costPrice.form-control(type="number", name="costPrice", step="0.01", value=item.costPrice, required)

        //- Selling Price
        .mb-3
          label(for="sellingPrice") Selling Price
          input#sellingPrice.form-control(type="number", name="sellingPrice", step="0.01", value=item.sellingPrice, required)

        //- Quality
        .mb-3
          label(for="quality") Quality
          select#quality.form-select(name="quality")
            option(value=item.quality selected) #{item.quality}
            option(value="High") High
            option(value="Medium") Medium
            option(value="Low") Low

        //- Color (optional)
        .mb-3
          label(for="color") Color (optional)
          input#color.form-control(type="text", name="color", value=item.color)

        //- Measurements (optional)
        .mb-3
          label(for="measurements") Measurements (optional)
          input#measurements.form-control(type="text", name="measurements", value=item.measurements)

        //- Submit
        .d-grid
          button.btn.btn-primary(type="submit") Update Stock

block scripts
  script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
