//-  Stock Registration Form 
.container
  .form-card
    h2 Register New Stock
    form#stockForm(action="/Addstock", method="post")
      label Product Name
      select#productName(name="productName", required)
        option(value) Select type
        option(value="Timber") Timber
        option(value="Hardwood") Hardwood
        option(value="Softwood") Softwood
        option(value="Poles") Poles
        option(value="Chairs") Chairs
        option(value="Tables") Tables
      label Product Type
      select#productType(name="productType", required)
        option(value) Select type
        option(value="Wood") Wood
        option(value="Furniture") Furniture
      label Supplier Name
      input#supplierName(type="text", name="supplierName")
      label Date
      input#date(type="date", name="date", required)
      label Quantity
      input#quantity(type="number", name="quantity", min="1", required)
      label Cost Price
      input#costPrice(type="number", name="costPrice", step="0.01", required)
      label Selling Price
      input#sellingPrice(type="number", name="sellingPrice", step="0.01", required)
      label Quality
      select#quality(type="text", name="quality")
        option(value="")
        option(value="High") High
        option(value="Medium") Medium
        option(value="Low") Low
      label Color (optional)
      input#color(type="text", name="color")
      label Measurements (optional)
      input#measurements(type="number", name="measurements")
      button(type="submit") Save Stock
